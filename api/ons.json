(async () => {
  try {
    const res = await fetch("https://api.metals.live/v1/spot");
    const data = await res.json();

    // JSON olarak tarayıcıya döndür
    const body = JSON.stringify({ gold: data[0].gold });

    // GitHub Pages JS olarak çalışmadığı için
    // JSONP formatında döndürüyoruz:
    document.write(body);
  } catch (e) {
    document.write(JSON.stringify({ gold: null }));
  }
})();
